{
  "version": 2,
  "builds": [
    {
      "src": "server/src/vercel_server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["server/prisma/schema.prisma"] }
    },
    {
      "src": "client/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/graphql",
      "dest": "server/src/vercel_server.js"
    },
    {
      "src": "/rest",
      "dest": "server/src/vercel_server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/src/vercel_server.js"
    }
  ],
  "buildCommand": "npm install --prefix server && npx prisma generate --schema=server/prisma/schema.prisma && npm run build --prefix client"
}
