{
  "version": 2,
  "builds": [
    {
      "src": "server/src/vercel_server.js",
      "use": "@vercel/node",
      "config": {
        "zeroConfig": true,
        "buildCommand": "npx prisma generate"
      }
    },
    {
      "src": "client/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/graphql",
      "dest": "server/src/vercel_server.js"
    },
    {
      "src": "/rest",
      "dest": "server/src/vercel_server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/src/vercel_server.js"
    }
  ]
}
